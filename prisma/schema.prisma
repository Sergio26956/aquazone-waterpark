generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id    Int     @id @default(autoincrement())
  name  String
  email String  @unique
  events Event[]
}

model Event {
  id      Int     @id @default(autoincrement())
  title   String
  date    DateTime
  user    User    @relation(fields: [userId], references: [id])
  userId  Int
  createdAt DateTime @default(now())
}
